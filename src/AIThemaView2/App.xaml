<Application x:Class="AIThemaView2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AIThemaView2"
             xmlns:converters="clr-namespace:AIThemaView2.Converters"
             Startup="OnStartup"
             Exit="OnExit">
    <Application.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3E3E42"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="TertiaryTextColor" Color="#888888"/>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Application.Resources>
</Application>
