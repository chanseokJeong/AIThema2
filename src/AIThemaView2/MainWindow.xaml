                    <DatePicker SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                                Width="140" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Search Box -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="250" VerticalAlignment="Center"
                             Background="{StaticResource BackgroundColor}"
                             Foreground="{StaticResource SecondaryTextColor}"
                             BorderBrush="{StaticResource BorderColor}" Padding="8,6"/>
                    <Button Content="ê²€ìƒ‰" Command="{Binding SearchCommand}"
